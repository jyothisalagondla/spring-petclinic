pipeline {
    agent {label 'build_java_11'}
    stages {
        stage ('sourcecode') {
            steps {
                git branch: 'declarative', url: 'https://github.com/jyothisalagondla/spring-petclinic.git'
            }
        }
        stage('build the code'){
            steps 
                sh 'mvn package'
                
            }
        }
        stage('Artifactory-Configuration') {
            steps {
                rtMavenDeployer (
                    id: 'spc-deployer',
                    serverId: 'jfrog',
                    releaseRepo: 'spring-libs-release-local',
                    snapshotRepo: 'spring-libs-snapshot-local',

                )
            }
        }
        stage('junit test result') {
            steps {
                junit '**/surefire-reports/*.xml'
                archiveArtifacts artifacts: '**/*.jar', followSymlinks: false
            }   
        }
    }
}