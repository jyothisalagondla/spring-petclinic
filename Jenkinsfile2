pipeline {
    agent {label 'build_java_11'}
    stages {
        stage ('sourcecode') {
            steps {
                git branch: 'declarative', url: 'https://github.com/jyothisalagondla/spring-petclinic.git'
            }
        }
        stage('build the code'){
            steps 
                sh 'mvn clean install'
                
            }
        }
        stage('Artifactory-Configuration') {
            steps {
                rtMavenDeployer (
                    id: 'spc-deployer',
                    serverId: 'jfrog',
                    releaseRepo: 'spring-libs-release',
                    snapshotRepo: 'spring-libs-snapshot',

                )
            }
        }
        stage('deploy') {
            steps {

                rtMavenRun (
                    tool: 'MVN_DEFAULT',
                    pom: 'pom.xml',
                    goals: 'clean install',
                    deployerId: 'spc-deployer',
                )

            }
        }
        stage('junit test result') {
            steps {
                junit '**/surefire-reports/*.xml'
                archiveArtifacts artifacts: '**/*.jar', followSymlinks: false
            }   
        }
    }
